{
  "name": "feed-monitor",
  "private": true,
  "scripts": {
    "build": "npm run build:css && npm run build:js",
    "build:css": "tailwindcss -c ./config/tailwind.config.js -i ./app/assets/stylesheets/feed_monitor/application.tailwind.css -o ./app/assets/builds/feed_monitor/application.css",
    "build:css:watch": "tailwindcss -c ./config/tailwind.config.js -i ./app/assets/stylesheets/feed_monitor/application.tailwind.css -o ./app/assets/builds/feed_monitor/application.css --watch",
    "build:js": "esbuild app/assets/javascripts/feed_monitor/application.js --bundle --format=esm --sourcemap --outfile=app/assets/builds/feed_monitor/application.js --log-level=warning --alias:stimulus-use=stimulus-use",
    "build:js:watch": "npm run build:js -- --watch",
    "lint:js": "eslint \"app/assets/javascripts/**/*.js\"",
    "lint:css": "stylelint \"app/assets/**/*.css\"",
    "lint": "npm run lint:js && npm run lint:css",
    "check:assets": "npm run build"
  },
  "dependencies": {
    "@hotwired/stimulus": "^3.2.2",
    "stimulus-use": "^0.52.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.11.0",
    "autoprefixer": "^10.4.20",
    "esbuild": "^0.23.0",
    "eslint": "^9.11.0",
    "postcss": "^8.4.45",
    "stylelint": "^16.8.0",
    "stylelint-config-standard": "^36.0.0",
    "tailwindcss": "^3.4.10"
  }
}
