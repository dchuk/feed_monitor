<div class="space-y-6">
  <div class="flex flex-wrap items-center justify-between gap-3">
    <div>
      <h1 class="text-3xl font-semibold text-slate-900">Scrape Logs</h1>
      <p class="mt-1 text-sm text-slate-500">Track scraping attempts and results.</p>
    </div>
    <div class="flex overflow-hidden rounded-md border border-slate-200">
      <% [["All", nil], ["Successes", "success"], ["Failures", "failed"]].each do |label, status| %>
        <% active = (@status == status) || (@status.nil? && status.nil?) %>
        <%= link_to label,
                    feed_monitor.scrape_logs_path(status: status),
                    class: [
                      "px-4 py-2 text-sm font-medium border-slate-200",
                      active ? "bg-slate-800 text-white" : "bg-white text-slate-600 hover:bg-slate-50",
                      status == "success" ? "border-l" : ""
                    ].join(" ") %>
      <% end %>
    </div>
  </div>

  <div class="overflow-hidden rounded-lg border border-slate-200 bg-white shadow-sm" data-testid="scrape-logs-table">
    <table class="min-w-full divide-y divide-slate-200 text-left text-sm">
      <thead class="bg-slate-50 text-xs font-semibold uppercase tracking-wide text-slate-500">
        <tr>
          <th scope="col" class="px-6 py-3">Started</th>
          <th scope="col" class="px-6 py-3">Item</th>
          <th scope="col" class="px-6 py-3">Source</th>
          <th scope="col" class="px-6 py-3">Result</th>
          <th scope="col" class="px-6 py-3">Duration</th>
          <th scope="col" class="px-6 py-3"></th>
        </tr>
      </thead>
      <tbody class="divide-y divide-slate-100 text-slate-700">
        <% @logs.each do |log| %>
          <tr class="hover:bg-slate-50">
            <td class="px-6 py-4 text-xs text-slate-500"><%= log.started_at&.strftime("%b %d, %Y %H:%M:%S") || "Unknown" %></td>
            <td class="px-6 py-4 text-sm">
              <%= link_to(log.item.title.presence || "(untitled)", feed_monitor.item_path(log.item), class: "text-blue-600 hover:text-blue-500") %>
            </td>
            <td class="px-6 py-4 text-sm">
              <%= link_to log.source.name, feed_monitor.source_path(log.source), class: "text-blue-600 hover:text-blue-500" %>
            </td>
            <td class="px-6 py-4 text-sm">
              <% status_label, status_classes = log.success? ? ["Success", "bg-green-100 text-green-700"] : ["Failure", "bg-rose-100 text-rose-700"] %>
              <span class="inline-flex items-center rounded-full px-3 py-1 text-xs font-semibold <%= status_classes %>"><%= status_label %></span>
            </td>
            <td class="px-6 py-4 text-xs text-slate-500">
              <%= log.duration_ms ? "#{log.duration_ms} ms" : "â€”" %>
            </td>
            <td class="px-6 py-4 text-right text-sm">
              <%= link_to "View", feed_monitor.scrape_log_path(log), class: "text-blue-600 hover:text-blue-500" %>
            </td>
          </tr>
        <% end %>

        <% if @logs.blank? %>
          <tr>
            <td colspan="6" class="px-6 py-6 text-center text-sm text-slate-500">
              No scrape logs recorded yet.
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>

  <p class="text-xs text-slate-500">Showing up to 50 recent logs.</p>
</div>
